{
    "openapi": "3.0.1",
    "info": {
        "title": "API de Gerenciamento de Tarefas",
        "description": "API para gerenciar tarefas, criada para o desafio da Trilha Backend da Código Certo",
        "version": "1.0.0"
    },
    "basePath": "/",
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    },
    "paths": {
        "/users": {
            "post": {
                "summary": "Cria um novo usuário",
                "tags": [
                    "Usuários"
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "Sicrano"
                                    },
                                    "email": {
                                        "type": "string",
                                        "example": "sicrano@email.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "Sicrano1#"
                                    }
                                },
                                "required": [
                                    "name",
                                    "email",
                                    "password"
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Usuário criado com sucesso"
                    },
                    "400": {
                        "description": "Erro na criação do usuário"
                    }
                }
            }
        },
        "/users/login": {
            "post": {
                "summary": "Login de usuário",
                "tags": [
                    "Usuários"
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "example": "sicrano@email.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "Sicrano1#"
                                    }
                                },
                                "required": [
                                    "email",
                                    "password"
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Login realizado com sucesso"
                    },
                    "400": {
                        "description": "Erro no login do usuário"
                    }
                }
            }
        },
        "/users/tasks/{userId}": {
            "get": {
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "summary": "Lista todas as tarefas de um usuário",
                "tags": [
                    "Usuários"
                ],
                "parameters": [
                    {
                        "name": "userId",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "description": "ID do usuário"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Lista de tarefas retornada com sucesso"
                    },
                    "404": {
                        "description": "Usuário não encontrado"
                    }
                }
            }
        },
        "/users/{id}": {
            "put": {
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "summary": "Atualiza um usuário",
                "tags": [
                    "Usuários"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "description": "ID do usuário"
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "Fulano"
                                    },
                                    "email": {
                                        "type": "string",
                                        "example": "fulano@email.com"
                                    },
                                    "oldPassword": {
                                        "type": "string",
                                        "example": "senhaAntiga123#"
                                    },
                                    "newPassword": {
                                        "type": "string",
                                        "example": "novaSenha123#"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Usuário atualizado com sucesso"
                    },
                    "400": {
                        "description": "Erro na atualização do usuário"
                    }
                }
            },
            "delete": {
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "summary": "Deleta um usuário",
                "tags": [
                    "Usuários"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "description": "ID do usuário"
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Usuário deletado com sucesso"
                    },
                    "404": {
                        "description": "Usuário não encontrado"
                    }
                }
            }
        },
        "/tasks": {
            "post": {
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "summary": "Cria uma nova tarefa",
                "tags": [
                    "Tarefas"
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "title": {
                                        "type": "string",
                                        "example": "Nova tarefa"
                                    },
                                    "description": {
                                        "type": "string",
                                        "example": "Descrição da nova tarefa"
                                    },
                                    "completed": {
                                        "type": "boolean",
                                        "example": false
                                    },
                                    "userId": {
                                        "type": "string",
                                        "example": "11b346f0-760d-471e-ba8b-9e5e2d5957cb"
                                    }
                                },
                                "required": [
                                    "title",
                                    "description",
                                    "userId"
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Tarefa criada com sucesso"
                    },
                    "400": {
                        "description": "Erro na criação da tarefa"
                    }
                }
            }
        },
        "/tasks/{taskId}": {
            "get": {
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "summary": "Busca uma tarefa pelo ID",
                "tags": [
                    "Tarefas"
                ],
                "parameters": [
                    {
                        "name": "taskId",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "description": "ID da tarefa"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Tarefa retornada com sucesso"
                    },
                    "404": {
                        "description": "Tarefa não encontrada"
                    }
                }
            },
            "put": {
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "summary": "Atualiza uma tarefa pelo ID",
                "tags": [
                    "Tarefas"
                ],
                "parameters": [
                    {
                        "name": "taskId",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "description": "ID da tarefa"
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "title": {
                                        "type": "string",
                                        "example": "Título atualizado"
                                    },
                                    "description": {
                                        "type": "string",
                                        "example": "Descrição atualizada"
                                    },
                                    "completed": {
                                        "type": "boolean",
                                        "example": true
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Tarefa atualizada com sucesso"
                    },
                    "404": {
                        "description": "Tarefa não encontrada"
                    }
                }
            },
            "delete": {
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "summary": "Deleta uma tarefa pelo ID",
                "tags": [
                    "Tarefas"
                ],
                "parameters": [
                    {
                        "name": "taskId",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "description": "ID da tarefa"
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Tarefa deletada com sucesso"
                    },
                    "404": {
                        "description": "Tarefa não encontrada"
                    }
                }
            }
        }
    }
}